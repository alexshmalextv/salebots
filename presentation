  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    new Chart(document.getElementById('hiddenLossesChart'),{type:'doughnut',data:{labels:['Видимые','Скрытые'],datasets:[{data:[15,85],backgroundColor:['#6FD2FF','#7CF5C6']}]} });
    new Chart(document.getElementById('responseChart'),{type:'bar',data:{labels:['Было 12 мин','Стало 0:30'],datasets:[{data:[100,6],backgroundColor:['#FF8B6E','#76E39E']}]} });
    const $=id=>document.getElementById(id);
    function calc(){const L=+$("leads").value||0;const c0=(+$("conv").value||0)/100;const m=+$("margin").value||0;const up=(+$("uplift").value||0)/100;const deals0=L*c0;const deals1=L*c0*(1+up);const delta=Math.max(0,deals1-deals0);const gain=delta*m;const price=1199;const weeks=gain>0?(price/(gain/4)):Infinity;const ok=gain>=price;$("roiOut").innerHTML=`Доп. сделки: ${delta.toFixed(1)} · Доход/мес: $${gain.toFixed(0)}<br>Окупаемость: <b style='color:${ok?'#7CF5C6':'#FF8B6E'}'>${ok?weeks.toFixed(1)+' нед.':'>12 нед.'}</b>`;}
    ["leads","conv","margin","uplift"].forEach(id=>$(id).addEventListener('input',calc));calc();
  </script>
